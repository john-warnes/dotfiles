# tmux 2.9

set -g status-style bg=colour234,align=left,none
set -g status "on"

set -g status-left-style none
set -g status-left-length "100"
set -g status-left "#[fg=colour16,bg=colour254,bold] #S #[fg=colour254,bg=colour234,nobold,nounderscore,noitalics]"

set -g status-right-style none
set -g status-right "#[fg=colour236,bg=colour234,nobold,nounderscore,noitalics]#[fg=colour247,bg=colour236] %Y-%m-%d  %H:%M #[fg=colour252,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour235,bg=colour252] #h "
set -g status-right-length "100"

set -g message-command-style bg=colour31,fg=colour231

set -g message-style bg=colour31,fg=colour231

set -g pane-active-border-style fg=colour254
set -g pane-border-style fg=colour240

setw -g window-status-style fg=colour250,bg=colour234,none

setw -g window-status-activity-style fg=colour250,bg=colour234,none

setw -g window-status-separator ""
setw -g window-status-format "#[fg=colour244,bg=colour234] #I #[fg=colour250,bg=colour234] #W "
setw -g window-status-current-format "#[fg=colour234,bg=colour31,nobold,nounderscore,noitalics]#[fg=colour247,bg=colour236] #I #[bold] #W #[fg=colour31,bg=colour234,nobold,nounderscore,noitalics]"
